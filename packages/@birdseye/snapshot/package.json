{
  "name": "@birdseye/snapshot",
  "version": "0.0.0",
  "author": "katashin",
  "private": true,
  "description": "Taking snapshots for Birdseye catalog",
  "keywords": [
    "Birdseye",
    "snapshot",
    "testing",
    "visual regression"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/birdseye",
  "bugs": "https://github.com/ktsn/birdseye/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/birdseye.git"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "eslint --ext js,ts src test",
    "lint:fix": "eslint --fix --ext js,ts src test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "eslint": "^6.3.0",
    "eslint-config-ktsn-typescript": "^2.0.0",
    "jest": "^23.5.0",
    "prettier": "1.19.1",
    "prettier-config-ktsn": "^1.0.0",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "puppeteer": "^2.0.0"
  }
}
